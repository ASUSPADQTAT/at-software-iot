    <table>
      <tr>
        <th colspan="4"><h2>覆測表單填寫</h2></th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
      <tr>
        <td> <%= f.input :TTBugID  , :label => "TT Bug ID" ,:input_html=>{:style=> 'width: 120px'}  %></td>
        <td><%= f.input :BugZillaBugID  , :label => "BugZilla Bug ID" ,:input_html=>{:style=> 'width: 120px'}  %></td>


        <td></td>
        <td></td>

      </tr>
      <tr>
        <td><%= f.input :Tester  , :label => "複測人" ,:input_html=>{:style=> 'width: 120px'}  %></td>
        <td><%= f.input :TesterResult  , :label => "複測結果" ,:input_html=>{:style=> 'width: 120px'}  %></td>
        <td></td>
        <td></td>
      </tr>
      <tr>
        <td colspan="4"><%= f.input :TesterComment  ,as: :text , :label => "複測評論" ,:input_html => { :rows => 4 , :style => 'width:400px'}%></td>

      </tr>
       </table>
    <%= f.button :submit %>
<% end %>






