<%= link_to 'back index', testrun_apps_path %>
<div class="col-md-12">
  <table class="table table-striped">
    <%= render :partial => 'form'%>


    <tbody>
    <tr>
      <%= render :partial => 'apps' , :locals => { :app => @app } %>
    </tr>
    </tbody>
  </table>
</div>

<%= simple_form_for @app,
                    :url=> url_for( :action => 'update' , :controller =>  'testrun_apps'),
