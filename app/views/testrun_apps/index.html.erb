

<div class="page-header">

  <div class="row">
    <div class="col-md-10">
      <h2>TestRun Result <span style="font-size: 16pt" class="badge"><%= @apps.length %></span> </h2>
    </div>
    <div class="col-md-2">
      <h2><%= button_to "Download csv", testrun_apps_path(format: "csv")   ,:class => "btn btn-warning",:method => :get%></h2>
    </div>
  </div>
</div>

<h4 class="page-header">Î£ SUMMARY</h4>
<nav class="navbar navbar-default">
  <div class="container-fluid">

      <%= render :partial => 'summary' %>

  </div>
</nav>

<div>

	<table class="table table-striped">

      <!-- Title -->
      <%= render :partial => 'form' %>

      <tbody>
        <% @apps.each do |app| %>
        <tr>
          <%= render :partial => 'apps'  ,:locals => { :app => app} %>


          <td>

            <!-- Split button -->
            <div class="btn-group">
              <button type="button" class="btn btn-danger">Action</button>
              <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                <span class="caret"></span>
                <span class="sr-only">Toggle Dropdown</span>
              </button>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to 'Detail', testrun_app_path( @testrun , app),:method => :get%></li>

                <li class="divider"></li>
                <li><%= link_to 'Edit', edit_testrun_app_path( @testrun , app),:method => :get%></li>
                <li class="divider"></li>
                <li> <%= link_to 'Delete', testrun_app_path( @testrun , app),:method => :delete%></li>


              </ul>
            </div>
          </td>

        </tr>
        <% end %>
      </tbody>
    </table>

</div>
<%= paginate @apps %>

<div class="col-md-12">
  <%= link_to 'back index', testruns_path %>
</div>