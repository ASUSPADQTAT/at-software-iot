<div class="col-md-12">
  <%= link_to 'back index', testruns_path %>
</div>


<div class="row col-md-12">
  <div class="col-m-6">
    <label>
      <h2>TestRun Result <span style="font-size: 16pt" class="badge"><%= @apps.length %></span> </h2>

    </label>


  </div>


  <div class="btn-group col-md-1 col-md-offset-5" role="group" aria-label="...">
    <%= button_to "Download csv", testrun_apps_path(format: "csv")   ,:class => "btn btn-warning",:method => :get%>
  </div>


</div>

<div class="col-xs-6">  <%= render :partial => 'summary' %></div>



<div>

	<table class="table table-striped">

      <!-- Filter -->

      <!-- Title -->
      <%= render :partial => 'form' %>

      <tbody>
        <% @apps.each do |app| %>
        <tr>
          <%= render :partial => 'apps'  ,:locals => { :app => app} %>

          <td>
            <div><%= link_to 'Launch Log', testrun_app_path(@testrun, app) %></div>
            <div><%= link_to 'Monkey Log', testrun_app_path(@testrun, app) %></div>
          </td>
          <td>

            <!-- Split button -->
            <div class="btn-group">
              <button type="button" class="btn btn-danger">Action</button>
              <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                <span class="caret"></span>
                <span class="sr-only">Toggle Dropdown</span>
              </button>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to 'Edit', edit_testrun_app_path( @testrun , app),:method => :get%></li>
                <li class="divider"></li>
                <li><a href="#">Disable</a></li>
                <li class="divider"></li>
                <li> <%= link_to 'Delete', testrun_app_path( @testrun , app),:method => :delete%></li>


              </ul>
            </div>
          </td>

        </tr>
        <% end %>
      </tbody>
    </table>

</div>
<%= paginate @apps %>

